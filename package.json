{
  "name": "minikan",
  "version": "1.0.0",
  "description": "Minimal Kanban-like task manager.",
  "main": "app.js",
  "scripts": {
    "build:css-dev": "npx tailwindcss-cli@latest build ./src/css/tailwind.css -o ./src/tailwind.css",
    "build:css-prod": "NODE_ENV=production npx tailwindcss-cli@latest build ./src/css/tailwind.css -o ./extension/dist/tailwind.css",
    "copy:html": "copyfiles -f src/*.html extension/dist",
    "copy:js": "copyfiles -f src/js/* extension/dist/js",
    "copy:all": "npm run copy:html && npm run copy:js",
    "build:prod": "npm run build:css-prod && npm run copy:all"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neil-vqa/minikan.git"
  },
  "keywords": [
    "kanban",
    "chrome",
    "extension"
  ],
  "author": "Neil Van Alino",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neil-vqa/minikan/issues"
  },
  "homepage": "https://github.com/neil-vqa/minikan#readme"
}
